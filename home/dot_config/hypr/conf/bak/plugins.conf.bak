exec-once = hyprpm reload -n

plugin {

  hyprexpo {
    gap_size = 10
    bg_col = rgb(282828)
    workspace_method = first 1
  }

  hy3 {
    tabs {
      height = 2
      padding = 6
      render_text = false
    }

    autotile {
      enable = true
      trigger_width = 800
      trigger_height = 500
    }
  }

}

bindd = $mainMod, G, Expo, hyprexpo:expo, toggle
bind = $mainMod, G, fullscreenstate, 0

