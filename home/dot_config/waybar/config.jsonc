  },
  "sway/workspaces": {
    "format": "{icon}",
    // "format": "{icon} {windows}",
    "format-icons": {
      "focused": "ÔÑë",
      "default": "ÔÑë",
      "empty": "ÔÑë",
    },
    // "window-rewrite-default": "{name}",
    // "format-window-separator": " | ",
    "persistent-workspaces": {
      "1": ["DP-1"],
      "2": ["DP-2"],
      "3": ["DP-1"],
      "4": ["DP-3"],
      "5": ["HDMI-A-1"],
      "6": ["DP-2"],
      "7": ["DP-3"],
      "8": ["HDMI-A-1"],
    },
  },
  // "sway/mode": {
  //   "format": "Ôóº {}",
  //   "max-length": 50,
  // },
  "hyprland/window": {
    "icon": true,
    "icon-size": 24,
    "seprate-outputs": true,
    "rewrite": {
      "(.*) - Brave": "$1",
      "(.*) - Thunar": "$1",
      "nvim (.*)": "$1 ÔçØ ",
      // "(.*) - Brave Search": "$1 Û∞∂ö ",
      // "(.*) - Google Search .*": "$1 ÔÄÇ ",
    },
  },
  "sway/window": {
    "icon": true,
    "icon-size": 24,
    "all-outputs": true,
    "offscreen-css": true,
    "offscreen-css-text": "(inactive)",
    "rewrite": {
      "(.*) - Brave": "$1",
    },
  },
  "custom/notification": {
    "tooltip": false,
    "format": "Óöê",
    "on-click": "swaync-client -t -sw",
    "escape": true,
  },
  "clock": {
    "format": "Û∞•î <b>{:%H:%M}</b>",
    // "format": "{:%I:%M:%S %p} ",
    // "interval": 1,
    "tooltip-format": "<tt>{calendar}</tt>",
    "calendar": {
      "format": {
        "today": "<span color='#fAfBfC'><b>{}</b></span>",
      },
    },
    "actions": {
      "on-click-right": "shift_down",
      "on-click": "shift_up",
    },
  },
  "network": {
    "format-alt": "<span foreground='#99ffdd'>ÔÄô  {bandwidthDownBytes}</span>  <span foreground='#ffcc66'>ÔÇì  {bandwidthUpBytes}</span>",
    "format-wifi": "Ôá´",
    // "format-ethernet": "Óºâ",
    "format-ethernet": "Û∞àÄ",
    "format-disconnected": "Ó´ê",
    "tooltip-format-disconnected": "Error",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
    "tooltip-format-ethernet": "{ifname} üñß ",
    // TODO: use rofi network script instead for right click
    // "on-click-right": "wezterm start nmtui",
  },
  "bluetooth": {
    "format-on": "Û∞ÇØ",
    "format-off": "BT-off",
    "format-disabled": "Û∞Ç≤",
    "format-connected-battery": "{device_battery_percentage}% Û∞ÇØ",
    "format-alt": "{device_alias} Û∞ÇØ",
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\n{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\n{device_address}\n{device_battery_percentage}%",
    "on-click-right": "blueberry",
  },
  "battery": {
    "interval": 30,
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 20,
    },
    "format": "{capacity}% {icon}",
    "format-charging": "{capacity}% Û∞ÇÑ",
    "format-plugged": "{capacity}% Û∞ÇÑ Ó¨≠",
    "format-alt": "{time} {icon}",
    "format-icons": ["Û∞Åª", "Û∞Åº", "Û∞Åæ", "Û∞ÇÄ", "Û∞ÇÇ", "Û∞Åπ"],
  },
  "custom/pacman": {
    // TODO: don't display if no updates
    "format": "Û∞Ö¢ {}",
    "interval": 30,
    "exec": "checkupdates | wc -l",
    "exec-if": "exit 0",
    "on-click": "kitty sh -c 'yay -Syu; echo Done - Press enter to exit; read'; pkill -SIGRTMIN+8 waybar",
    "signal": 8,
    "tooltip": false,
  },
  "custom/expand": {
    "format": "ÔÑÑ",
    "tooltip": false,
  },
  "custom/endpoint": {
    "format": "|",
    "tooltip": false,
  },
  "group/expand": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 600,
      "transition-to-left": true,
      "click-to-reveal": true,
    },
    "modules": [
      "custom/expand",
      "custom/colorpicker",
      "cpu",
      "memory",
      "temperature",
      "custom/endpoint",
    ],
  },
  "custom/colorpicker": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "exec": "~/.config/waybar/scripts/colorpicker.sh -j",
    "on-click": "~/.config/waybar/scripts/colorpicker.sh",
    "signal": 1,
  },
  "cpu": {
    "format": "Û∞ª†",
    "tooltip": true,
  },
  "memory": {
    "format": "ÓøÖ",
  },
  "temperature": {
    "critical-threshold": 80,
    "format": "Ôãâ",
  },
  "tray": {
    "icon-size": 14,
    "spacing": 10,
  },
}
