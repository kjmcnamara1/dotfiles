{
  "layer": "top",
  "position": "top",
  "reload_style_on_change": true,
  "modules-left": ["hyprland/workspaces", "sway/workspaces", "sway/mode"],
  "modules-center": ["hyprland/window", "sway/window"],
  "modules-right": [
    "group/expand",
    "tray",
    "bluetooth",
    "network",
    "battery",
    "custom/pacman",
    "clock",
    "custom/notification",
  ],
  "hyprland/workspaces": {
    // "format": "{icon}",
    "format": "{icon}{windows}",
    // "format": "{name}",
    "format-icons": {
      // "active": "ÔÑë",
      "default": "",
      "empty": "ÔÑë",
    },
    "persistent-workspaces": {
      "DP-1": [1, 3],
      "DP-2": [2, 6],
      "DP-3": [4, 7],
      "HDMI-A-1": [5, 8],
